	<body>
		<div class="main-w3layouts wrapper">
			<h1>SignUp For NodeJS</h1>
			<div class="main-agileinfo">
				<div class="agileits-top">
					<form action="/users/signup" method="POST">
						<h2>Name</h2>
						<input class="text" type="text" name="name" placeholder="Name" />
						<h2>Email</h2>
						<input
							class="text email"
							type="email"
							name="email"
							placeholder="Email"
						/>
						<h2>Password</h2>
						<input
							class="text"
							type="password"
							name="password"
							placeholder="Password"
						/>
						<div class="wthree-text">
							<div class="clear"></div>
						</div>
						<input type="submit" value="SIGN UP" />
					</form>
					<p>Don't have an Account? <a href="/users/login"> Login Now!</a></p>
				</div>
			</div>

